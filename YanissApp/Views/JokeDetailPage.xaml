<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="YanissApp.Views.JokeDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:YanissApp.ViewModels"
    x:DataType="viewModels:JokeDetailViewModel">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding Jokes.Type}" 
               FontSize="24" 
               FontAttributes="Bold" />
        <Label Text="{Binding Jokes.Setup}" 
               FontSize="24" 
               FontAttributes="Bold" />
        <Label Text="{Binding Jokes.Punchline}" 
               FontSize="18" />
    </VerticalStackLayout>
</ContentPage>