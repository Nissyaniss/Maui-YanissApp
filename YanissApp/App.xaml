<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YanissApp.App">
    <Application.Resources>
  <ResourceDictionary>

    <Color x:Key="TabBarBackground">White</Color>
    <Color x:Key="TabBarUnselected">#888888</Color>
    <Color x:Key="TabBarSelected">#E7272D</Color>

    <Style TargetType="Shell">
      <Setter Property="TabBarBackgroundColor" Value="{StaticResource TabBarBackground}" />
      <Setter Property="TabBarUnselectedColor" Value="{StaticResource TabBarUnselected}" />
      <Setter Property="TabBarForegroundColor" Value="{StaticResource TabBarSelected}" />
      <Setter Property="TabBarTitleColor" Value="{StaticResource TabBarUnselected}" />
    </Style>

  </ResourceDictionary>
</Application.Resources>
</Application>
